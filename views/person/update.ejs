<!--update.ejs-->
<form action="/realestate/update/<%= realestate.id %>" method="POST">

    <div class="row">
        <div class="col-xl-6">
            <label style="font-weight: bold">Property title:</label>
            <input type="text" class="form-control" style="width:500px" name="realestate[title] " value="<%= realestate.title %>" required>
        </div>
        <div class="col-xl-6">
            <span style="font-weight: bold">Estate:</span><br>
            <select name="realestate[Estate]" style="width:500px" value="<%= realestate.Estate %>" required>
                <option value="Festival City">Festival City</option>
                <option value="Tin Ma Court">Tin Ma Court</option>
                <option value="City One Shatin">City One Shatin</option>
            </select>
        </div>
        <div class="col-xl-6">

            <label for="GrossArea" style="font-weight: bold">Gross Area:</label><br>
            <input type="number" style="width:500px" step="1" min="50" max="1500" style="width:500px"
                name="realestate[GrossArea]" value="<%= realestate.GrossArea %>" required>

        </div>

        <div class="col-xl-6">

            <label for="Rent" style="font-weight: bold">Rent:</label><br>
            <input type="number" step="1" min="10000" max="50000" style="width:500px" name="realestate[Rent]" value="<%= realestate.Rent %>"
                required>

        </div>

        <div class="col-xl-6">

            <label for="Image URL:" style="font-weight: bold">Image URL:</label><br>
            <input type="url" style="width:500px" name="Dhnrealestate[ImageURL]" value="<%= dhnrealestate.ImageURL %>" required>


        </div>

        <div class="col-xl-6">

            <label for="Bedroom" style="font-weight: bold">Bedrooms:</label><br>
            <input type="number" step="1" min="1" max="10" style="width:500px" name="realestate[Bedroom]" value="<%= realestate.Bedroom %>" required>

        </div>
        <div class="col-xl-6">

            <label for="ExpectedTenants" style="font-weight: bold">Expected Tenants:</label><br>
            <input type="number" step="1" min="1" max="10" style="width:500px" name="realestate[ExpectedTenant]" value="<%= realestate.ExpectedTenant%>"
                required>

        </div>
        <div class="col-xl-6">
            <input name="box" type="checkbox" value="Highlighted Property" >Highlighted Property<br>
            <button type="submit" class="btn btn-primary">Submit</button>
          
        </div>

    </div>
</form>
<form action="/realestate/delete/<%= realestate.id %> "  method="POST">
    <div>
    <button type="submit" class="btn btn-danger">Delete</button>
   </div>
</form>